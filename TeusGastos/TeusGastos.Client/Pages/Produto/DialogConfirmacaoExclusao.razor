@using TeusGastos.Shared.Servicos.ProdutoServico
@inject IProdutoServico ProdutoServico
@inject ISnackbar Snackbar

<MudDialog Class="pb-2">
    <TitleContent>
        <MudText Typo="Typo.h6">Confirmação de Exclusão</MudText>
    </TitleContent>
    <DialogContent>
        <p class="mb-4">
            Tem certeza que deseja excluir esse registro?
        </p>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Transparent"
                   DropShadow="false"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Cancel"
                   IconSize="Size.Small"
                   OnClick="Cancel"
                   Class="ml-4">Cancelar
        </MudButton>
        <MudButton Color="Color.Error"
                   DropShadow="false"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Delete"
                   IconSize="Size.Small"
                   ButtonType="ButtonType.Submit"
                   OnClick="Submit"
                   Class="ml-auto mr-4">Excluir
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public int Id { get; set; }

    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;

    private async Task Submit()
    {
        try
        {
            await ProdutoServico.Excluir(Id, new CancellationToken(false));
            Snackbar.Add($"Produto excluído com sucesso!", Severity.Success,
                options =>
                {
                    options.VisibleStateDuration = 2000;
                    options.ShowTransitionDuration = 300;
                    options.HideTransitionDuration = 1000;
                    options.DuplicatesBehavior = SnackbarDuplicatesBehavior.Allow;
                });
            MudDialog.Close();
        }
        catch (Exception e)
        {
            Snackbar.Add
            (
                @<div>
                    <h3>Erro ao excluir Produto</h3>
                    <strong>Detalhes:</strong>
                    <text>@e.Message</text>
                </div>
                , Severity.Error);
        }

        StateHasChanged();
    }

    private void Cancel() => MudDialog.Cancel();
}
